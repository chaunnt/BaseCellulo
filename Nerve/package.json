  "scripts": {
    "test": "mocha server/api/**/**/*Test.js",
    "start": "nodemon app.js",
    "eslint": "eslint .",
    "dev": "nodemon --exec 'npm run eslint & npm start'",
    "efr": "eslint-find-rules --unused .eslintrc.js --no-error",
    "debug": "DEBUG=app node app.js"
