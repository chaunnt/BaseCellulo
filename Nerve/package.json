      "node_modules/**/node_modules"
    ],
    "delay": "2500",
    "env": {
      "NODE_ENV": "development",
      "DB_HOST": "streaming.nexlesoft.com",
      "DB_USER": "tester",
      "DB_PASSWORD": "Mar@2012",
      "DB_NAME": "test",
      "PORT": 4000
    },
    "ext": "js,json"
  },
  "engines": {
    "node": ">=12.16.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
